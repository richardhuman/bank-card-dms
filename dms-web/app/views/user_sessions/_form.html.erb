<%= form_with(model: user_session, data: { turbo: false }) do |form| %>

    <%= render "shared/form_errors", active_model_object: user_session %>

    <%= form.text_field :username, class: "u-full-width", placeholder: t("forms.user_session.placeholder.username"), data: { test_id: "login-username" } %>

    <%= form.password_field :password, class: "u-full-width", placeholder: t("forms.user_session.placeholder.password"), data: { test_id: "login-password" } %>

    <%= form.submit t("forms.user_session.actions.submit"), { class: "button button-primary", data: { test_id: "login-submit" }} %>

<% end %>

