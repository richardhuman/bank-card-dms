<%= form_with(model: [:back_office, card_bundle], local: true) do |form| %>

    <%= render "/shared/form_errors", active_model_object: card_bundle %>

    <%= form.text_field :bundle_number, placeholder: t("activerecord.attributes.card_bundle.bundle_number") %>

    <%= form.text_field :card_quantity, placeholder: t("activerecord.attributes.card_bundle.card_quantity") %>

    <%= form.collection_select :current_assignee_id, @agents, :id, :full_name_with_identifier, { prompt: "" },
                               placeholder: t("activerecord.attributes.card_bundle.current_assignee") %>

    <%= form.collection_select :parent_bundle_id, @available_parent_bundles, :id, :bundle_number, { prompt: "" } %>

    <%= form.submit t("forms.card_bundle.actions.create"), { class: "button-primary" } %>
    <%= form.submit t("forms.shared.actions.cancel"), { class: "button" } %>
<% end %>
